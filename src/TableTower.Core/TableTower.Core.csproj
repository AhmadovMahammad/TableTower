<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageReadmeFile>README.md</PackageReadmeFile>

		<Version>1.0.4</Version>
		<Authors>Mahammad Ahmadov</Authors>
		<Company>TableTower</Company>
		<PackageId>TableTower.Core</PackageId>
		<Description>Simple table rendering library for console apps in .NET</Description>
		<PackageTags>table console rendering unicode</PackageTags>

		<RepositoryUrl>https://github.com/AhmadovMahammad/TableTower</RepositoryUrl>
		<PackageProjectUrl>https://github.com/AhmadovMahammad/TableTower</PackageProjectUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageIcon>table.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<None Update="table.png" Pack="true" PackagePath="\" />
		<None Include="README.md" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="docs\images\" />
	</ItemGroup>
</Project>
